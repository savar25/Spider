<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:id="@+id/rel_note"
    android:background="#00ff00">

    <TextView
        android:id="@+id/expand_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Workout in Progress..."
        android:textColor="#ff0000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/note_steps"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/counter_background"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/note_cals"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/note_steps"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/note_steps"
        android:background="@drawable/counter_background"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/note_steps"
        android:layout_alignStart="@+id/note_steps"
        android:layout_below="@+id/note_steps"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-50dp"
        android:text="Steps"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/note_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/note_steps"
        android:layout_alignEnd="@+id/note_steps"
        android:layout_alignStart="@+id/note_steps"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="-20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:tint="#010101"
        app:srcCompat="@drawable/ic_npause" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/note_cals"
        android:layout_alignStart="@+id/note_cals"
        android:layout_below="@+id/note_cals"
        android:layout_marginEnd="-10dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Calories Burnt" />

    <ImageButton
        android:id="@+id/note_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/note_pause"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="-60dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/note_steps"
        android:layout_toStartOf="@+id/note_cals"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/ic_npaly" />

    <ImageButton
        android:id="@+id/note_stop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/note_cals"
        android:layout_alignEnd="@+id/note_cals"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/note_play"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/ic_nstop" />


</RelativeLayout>