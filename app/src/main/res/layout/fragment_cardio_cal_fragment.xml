<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cardio_cal_fragment"
     android:background="#040404">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/det_shape"
            android:cursorVisible="false"
            android:ems="10"
            android:fontFamily="@font/bahnschrift"
            android:hint="Calories"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textColor="#23ff00"
            android:textColorHint="#999"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <RadioButton
                android:id="@+id/rdbWalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Walk"
                android:fontFamily="@font/bahnschrift"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdbRun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run"
                android:fontFamily="@font/bahnschrift"                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdbCycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cycle"
                android:fontFamily="@font/bahnschrift"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdbCrossTrainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cross Trainer/Elliptical"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/bahnschrift"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/berlin"
            android:gravity="center"
            android:text="Calorie Burn Goal"
            android:textAlignment="center"
            android:textColor="#23ff00"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="298dp"
            android:layout_height="22dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/britanic"
            android:text="Choose Exercise"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="@+id/radioGroup"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goBtn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Start\nCardio"
            android:fontFamily="@font/britanic"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="#228"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>